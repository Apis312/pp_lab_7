import javafx.application.Application; 
import javafx.scene.Scene; 
import javafx.scene.control.Button; 
import javafx.scene.control.TextArea; 
import javafx.scene.control.TextField; 
import javafx.scene.layout.HBox; 
import javafx.scene.layout.VBox; 
import javafx.stage.DirectoryChooser; 
import javafx.stage.Stage; 
import java.io.File; 

public class Main extends Application {

    private TextField directoryPathField; 
    private TextField searchField; 
    private TextArea resultArea; // Dodanie zmiennej resultArea

    public static void main(String[] args) {
        launch(args); // Wywołanie metody launch - uruchomić aplikację javafx
    }

    @Override
    public void start(Stage primaryStage) {
        primaryStage.setTitle("File Browser and Search"); //tytuł

        directoryPathField = new TextField(); 
        directoryPathField.setPromptText("Wybierz katalog..."); 

        searchField = new TextField(); 
        searchField.setPromptText("Wpisz frazę do wyszukania..."); 

        Button browseButton = new Button("Przeglądaj"); // przycisk browse
        browseButton.setOnAction(e -> browseDirectory()); 

        Button searchButton = new Button("Szukaj"); 

        resultArea = new TextArea(); // Utworzenie nowego TextArea
        resultArea.setPrefHeight(400); // Ustawienie preferowanej wysokości

        HBox hBox = new HBox(10, directoryPathField, browseButton); 
        VBox vBox = new VBox(10, hBox, searchField, searchButton, resultArea); // Dodanie resultArea do VBox

        Scene scene = new Scene(vBox, 600, 400); // scena 600x400
        primaryStage.setScene(scene); 
        primaryStage.show(); // Wyświetlenie primaryStage
    }

    private void browseDirectory() {
        DirectoryChooser directoryChooser = new DirectoryChooser(); 
        File selectedDirectory = directoryChooser.showDialog(null); 

        if (selectedDirectory != null) { 
            directoryPathField.setText(selectedDirectory.getAbsolutePath()); 
        }
    }
}
